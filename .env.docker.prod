# Production Environment Variables for Docker
PROD_DB_NAME=oreo_prod_db
PROD_DB_USER=oreo_prod_user
PROD_DB_PASSWORD=very_secure_production_password_789_change_immediately

# Redis Configuration
PROD_REDIS_PASSWORD=production_redis_password_012_change_immediately

# JWT Configuration
PROD_JWT_SECRET=production-jwt-secret-extremely-secure-key-for-production-environment-change-immediately

# Backend Configuration
PORT=8080
ENVIRONMENT=production
USE_MOCK_DB=false
USE_MOCK_REDIS=false

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=${PROD_DB_USER}
DATABASE_PASSWORD=${PROD_DB_PASSWORD}
DATABASE_NAME=${PROD_DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# JWT Configuration
JWT_SECRET=${PROD_JWT_SECRET}
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# CORS Configuration
FRONTEND_URL=https://app.soloengine.in

# Rate Limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=1m

# Frontend Configuration
VITE_API_URL=https://api.soloengine.in/prod
VITE_ENVIRONMENT=production
