# Development Environment Variables for Docker
POSTGRES_DB=oreo_dev_db
POSTGRES_USER=oreo_dev_user
POSTGRES_PASSWORD=oreo_dev_password

# Backend Configuration
PORT=8080
ENVIRONMENT=development
USE_MOCK_DB=false
USE_MOCK_REDIS=false

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=oreo_dev_user
DB_PASSWORD=oreo_dev_password
DB_NAME=oreo_dev_db
DB_SSL_MODE=disable
DATABASE_URL=postgres://oreo_dev_user:oreo_dev_password@postgres:5432/oreo_dev_db?sslmode=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET=development-jwt-secret-key-change-in-production-make-it-very-long-and-random
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=720h

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# Frontend Configuration
VITE_API_URL=http://localhost:8080
VITE_ENVIRONMENT=development
