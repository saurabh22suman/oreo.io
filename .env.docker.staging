# Staging Environment Variables for Docker
STAGING_DB_NAME=oreo_staging_db
STAGING_DB_USER=oreo_staging_user
STAGING_DB_PASSWORD=secure_staging_password_123_change_in_production

# Redis Configuration
STAGING_REDIS_PASSWORD=staging_redis_password_456_change_in_production

# JWT Configuration
STAGING_JWT_SECRET=staging-jwt-secret-very-secure-key-for-staging-environment-change-in-production

# Backend Configuration
PORT=8080
ENVIRONMENT=staging
USE_MOCK_DB=false
USE_MOCK_REDIS=false

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=${STAGING_DB_USER}
DATABASE_PASSWORD=${STAGING_DB_PASSWORD}
DATABASE_NAME=${STAGING_DB_NAME}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# JWT Configuration
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h

# CORS Configuration
FRONTEND_URL=https://staging.soloengine.in

# Rate Limiting
RATE_LIMIT_REQUESTS=50
RATE_LIMIT_WINDOW=1m

# Frontend Configuration
VITE_API_URL=https://api.soloengine.in/staging
VITE_ENVIRONMENT=staging
