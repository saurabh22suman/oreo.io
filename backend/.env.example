# Backend Environment Variables (Copy to .env for local development)

# Server Configuration
PORT=8080
ENVIRONMENT=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration (Update these for your local setup)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=oreo_dev
DATABASE_URL=postgres://postgres:password@localhost:5432/oreo_dev?sslmode=disable

# Redis Configuration (Update these for your local setup)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=720h

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
